{
	"manifest_version": 2,

	"name": "简书专题助手",
	"description": "简书专题助手",
	"version": "0.0.1",

	"permissions": [
		"tabs",
		"http://www.jianshu.com/collection/*",
		"http://www.jianshu.com/notebooks/*"
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "menu.html"
	},
	"icons": {"48": "icon.png"},

	"background": {
		"scripts": ["moduleManager.js", "eventManager.js", "pipe.js", "gate.js", "servo.js"]
	},

	"content_scripts": [
		{
			"matches": ["http://www.jianshu.com/collection/*", "http://www.jianshu.com/notebooks/*"],
			"css": ["page.css"],
			"js": ["common.js", "kernel.js"],
			"run_at": "document_start"
		}
	]
}
